<p style="color: green"><%= notice %></p>

<h1>Lista de tweets</h1>
<br>

<%= form_tag tweets_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Buscar usuario' %>
  <%= submit_tag "Buscar", class: 'btn btn-warning' %>
<% end %>

<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Tweet</th>
    </tr>
  </thead>
  <tbody>
<%= will_paginate @tweets %>
<% @tweets.each do |tweet| %>
 <tr>
      <th scope="row"><%= tweet.id %></th>
      <td><%= tweet.user_name %></td>
      <td><%= tweet.description %></td>
      <td><%= link_to "Ir al tweet", tweet %></td>
    </tr>
  <% end %>

  </tbody>
</table>


<%= link_to 'Nuevo tweet', new_tweet_path, class: 'btn btn-primary btn-lg' %>







